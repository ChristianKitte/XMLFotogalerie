<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="index.xsl" ?>

<documentTemplate xsi:noNamespaceSchemaLocation="index.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Defines an siteimage -->
	<siteImage>
		<title>Eine Sonne als EyeCatcher für den Hintergrund</title>
		<alt>Eine Sonne als EyeCatcher für den Hintergrund</alt>
		<source>img/Intro/eyecatcher.jpg</source>
	</siteImage>
	<!-- Defines the main menue -->
	<mainNavigation>
		<!-- An item -->
		<mnItem>
			<!-- A unique ID -->
      		<!-- ContentGrpID-1 stands for HOME and page default is ./pages/home.html-->
      		<!-- If neccesarie changes must be reflexted within the Loader.js-->
			<id>ContentGrpID-1</id>
			<!-- The Caption -->
			<caption>Home</caption>
			<!-- The title -->
			<title>Zum Homebereich</title>
			<!-- targets to an page with content -->
			<source>./pages/home.html</source>
			<!-- The DIV Container to show the content -->
			<target>mainContent</target>
			<!-- The TAB-Index -->
			<tab>0</tab>
			<!-- Defines wether to set as selected or not -->
			<select>true</select>
		</mnItem>
		<mnItem>
			<id>ContentGrpID-2</id>
			<caption>Kontakt</caption>
			<title>Zum Kontaktbereich</title>
			<source>./pages/contact.html</source>
			<target>mainContent</target>
			<tab>1</tab>
